  usageCount   Int          @default(0) // S·ªë l·∫ßn s·ª≠ d·ª•ng cho model n√†y
  lastUsedAt   DateTime? // Th·ªùi gian s·ª≠ d·ª•ng cu·ªëi cho model n√†y
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  @@unique([userApiKeyId, modelId])
  @@map("UserApiKeyToModel")
}

// B·∫£ng trung gian cho quan h·ªá DefaultKey - Model
model DefaultKeyToModel {
